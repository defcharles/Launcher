{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Stellar",
    "version": "1.0.1",
    "identifier": "com.stellar.dev",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "plugins": {
        "deep-link": {
            "desktop": {
                "schemes": ["stellar"]
            }
        },
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUyMTRGQzI0NTJFNEJCODYKUldTR3UrUlNKUHdVVXJvckw1VWs2bWFLK0k0ZWJSdXZUcWZYck5NdXg1VXdaR0ZRMXFqek4vdEwK",
            "endpoints": ["https://cdn.stellarfn.dev/update.json"],
            "windows": {
                "installMode": "passive"
            }
        }
    },
    "app": {
        "windows": [{
            "title": "Stellar",
            "width": 1100,
            "height": 640,
            "minHeight": 640,
            "minWidth": 1100,
            "decorations": false,
            "fullscreen": false,
            "resizable": true,
            "center": true,
            "transparent": true
        }],
        "security": {
            "assetProtocol": {
                "scope": ["*/**"],
                "enable": true
            },
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "createUpdaterArtifacts": true,
        "icon": ["icons/icon.png", "icons/icon.ico"]
    }
}