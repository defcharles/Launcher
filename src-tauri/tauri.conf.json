{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "stellar",
  "version": "0.1.1",
  "identifier": "com.stellar.dev",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["stellar"]
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Stellar",
        "width": 1100,
        "height": 640,
        "decorations": false,
        "fullscreen": false,
        "resizable": false,
        "center": true,
        "transparent": true
      }
    ],
    "security": {
      "assetProtocol": {
        "scope": ["*/**"],
        "enable": true
      },
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png", "icons/icon.ico"]
  }
}
